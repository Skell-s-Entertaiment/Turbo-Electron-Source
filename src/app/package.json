{
  "name": "proyecto-megumi",
  "main": "main.js",
  "version": "1.0.0",
  "description": "Catcher's Minigames!",
  "scripts": {
    "start": "electron .",
    "build:all": "electron-builder --linux --win --mac",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1"
  },
  "build": {
    "appId": "com.skellent.catchersarcade",
    "productName": "Catcher's Arcade",
    "files": [
      "**/*",
      "!node_modules/*",
      "!dist/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.9.1"
  }
}
