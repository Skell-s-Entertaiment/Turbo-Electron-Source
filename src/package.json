{
  "name": "turbo-electron-source",
  "main": "main.js",
  "version": "1.0.0",
  "description": "Turbo-Electron-Source is simply the source code for the electrons generated by Turbowarp, available for compilation and with the option to incorporate Discord Rich Presence among other Node.js libraries.",
  "scripts": {
    "start": "electron .",
    "build:all": "electron-builder --linux --win --mac",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1"
  },
  "build": {
    "appId": "com.skellent.game",
    "productName": "Turbo Electron Source",
    "files": [
      "**/*",
      "!node_modules/*",
      "!dist/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.9.1"
  }
}
